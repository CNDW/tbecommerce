<div class="stock-row">
  <div class="col-main-body stock-item">
    <div class="col-sm-8 stock-images">
      {{image-carousel model=model.images}}
    </div>
    <div class="col-sm-4 stock-item-details">
      <h3>{{model.productName}}</h3>
      <p>{{model.instockDescription}}</p>
      <h3>{{model.displayTotalPrice}}</h3>
      {{#unless isUnavailable}}
        <button {{action "addToCart" model}} class="btn btn-black">add to cart</button>
      {{/unless}}
      {{#link-to "product" model.product tagname="button" classNames="btn btn-black"}}
        view in catalogue
      {{/link-to}}
    </div>
    <div class="col-sm-4 stock-item-details">
      <h4>Standards</h4>
      <ul class='top-border'>
        {{product-properties model=model.product.properties}}
      </ul>
    </div>
  </div>
</div>
