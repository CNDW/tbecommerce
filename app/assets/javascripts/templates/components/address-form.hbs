<div class="col-sm-6 col-md-4 selection-fields">
  <div class="field">
    <span class="field-label">first name</span>
    {{text-field value=model.firstname focus-out="acceptChanges"}}
  </div>
  <div class="field">
    <span class="field-label">last name</span>
    {{text-field value=model.lastname focus-out="acceptChanges"}}
  </div>
  <div class="field">
    <span class="field-label">email</span>
    {{text-field value=model.email focus-out="acceptChanges"}}
  </div>
  <div class="field">
    <span class="field-label">address</span>
    {{text-field value=model.address1 focus-out="acceptChanges"}}
  </div>
  <div class="field">
    <span class="field-label">address 2</span>
    {{text-field value=model.address2 focus-out="acceptChanges"}}
  </div>
</div>
<div class="col-sm-6 col-md-4 selection-fields">
  <div class="field">
    <span class="field-label">phone</span>
    {{text-field value=model.phone focus-out="acceptChanges"}}
  </div>
  <div class="field">
    <span class="field-label">city</span>
    {{text-field value=model.city focus-out="acceptChanges"}}
  </div>
  <div class="field">
    <span class="field-label">zip</span>
    {{text-field value=model.zipcode focus-out="acceptChanges"}}
  </div>
  <div class="field">
    <span class="field-label">country</span>
    {{dropdown-selection list=countries model=model target_attr="country"}}
  </div>
  {{#if model.states_required}}
    <div class="field">
      <span class="field-label">state</span>
      {{dropdown-selection list=states model=model target_attr="state"}}
    </div>
  {{/if}}
</div>