<div class="col-main-body">
  <div class="col-sm-5">
    {{#each categories as |category|}}
      <div class="col-sm-11 custom-field-section">
        {{#toggle-menu classNames="custom-selection-header"}}
          <span class="custom-selection-title">
            {{category.name}}
          </span>
          <span class="toggle-menu-icon right">
          </span>
        {{/toggle-menu}}
        <div class="section-content">
          {{#each category.types as |type|}}
            <div class="custom-selection-field">
              <div class="selection-category">
                <span class="category-title">
                  {{type.name}}
                </span>
                {{#each type.items as |item|}}
                  {{#selection-option item=item action="setCustomProduct" customItem=this}}
                    <span>{{item.name}}</span>
                  {{/selection-option}}
                {{/each}}
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/each}}
  </div>
  <div class="col-sm-7 centered">
    {{custom-item model=model}}
  </div>
</div>
{{#if hasProduct}}
  {{partial "custom/description"}}
{{/if}}
