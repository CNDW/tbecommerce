<div class="col-main-body">
  <div class="col-sm-5">
    {{#each colorTypes as |colorType|}}
      {{color-selector model=colorType classNames="col-sm-11 custom-field-section"}}
    {{/each}}
    <div class="col-sm-11 custom-field-footer">
      <div class="footer-info">
        <span class="capitalize">{{name}}</span>
        <span class="price">${{price}}</span>
      </div>
      {{#if hasProductAndColors}}
        {{#link-to "custom.features" model tagName="button" classNames="btn btn-black"}}
          continue to features
        {{/link-to}}
      {{/if}}
    </div>
  </div>
  <div class="col-sm-7 centered">
    {{custom-item model=model}}
  </div>
</div>
{{partial "custom/description"}}
